<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#2c3138"
    tools:context="com.grademojo.internal_database.Main4Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="30dp"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"


                />


            <android.support.v7.widget.CardView
                android:id="@+id/main_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1e2126"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <FrameLayout
                        android:id="@+id/frame_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        >
                    <TextView
                        android:id="@+id/yes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="On    "
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"

                        android:padding="5dp"


                        />

                    </FrameLayout>



                    <FrameLayout
                        android:id="@+id/frame_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_alignBottom="@+id/frame_yes"
                        android:layout_alignTop="@+id/frame_yes"
                        android:layout_toEndOf="@+id/frame_yes"
                        >

                    <TextView
                        android:id="@+id/no_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Off   "
                        android:gravity="center"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:layout_toEndOf="@+id/frame_no"

                        />

                    </FrameLayout>



                    <android.support.v7.widget.CardView
                        android:id="@+id/first_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/frame_yes"
                        android:layout_alignBottom="@+id/frame_yes"
                        android:layout_alignStart="@+id/frame_yes"
                        android:layout_alignEnd="@+id/frame_yes"
                        app:cardBackgroundColor="#2e9b95"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"

                        >






                    </android.support.v7.widget.CardView>






                </RelativeLayout>







            </android.support.v7.widget.CardView>




        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"


                />


            <android.support.v7.widget.CardView
                android:id="@+id/main_container1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1e2126"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <FrameLayout
                        android:id="@+id/frame_yes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        >
                        <TextView
                            android:id="@+id/yes_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="On    "
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"

                            android:padding="5dp"


                            />

                    </FrameLayout>



                    <FrameLayout
                        android:id="@+id/frame_no1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_alignTop="@+id/frame_yes1"
                        android:layout_alignBottom="@+id/frame_yes1"


                        android:layout_toEndOf="@+id/frame_yes1"
                        >

                        <TextView
                            android:id="@+id/no_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Off   "
                            android:layout_gravity="center"

                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"
                            android:layout_toEndOf="@+id/frame_no1"

                            />

                    </FrameLayout>



                    <android.support.v7.widget.CardView
                        android:id="@+id/second_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/frame_yes1"
                        android:layout_alignBottom="@+id/frame_yes1"
                        android:layout_alignStart="@+id/frame_yes1"
                        android:layout_alignEnd="@+id/frame_yes1"
                        app:cardBackgroundColor="#ec7f5a"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"

                        >






                    </android.support.v7.widget.CardView>






                </RelativeLayout>







            </android.support.v7.widget.CardView>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wi-Fi"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"


                />


            <android.support.v7.widget.CardView
                android:id="@+id/main_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1e2126"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"

                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >


                    <FrameLayout
                        android:id="@+id/frame_yes2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        >
                        <TextView
                            android:id="@+id/yes_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="On    "
                            android:gravity="center"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"

                            android:padding="5dp"


                            />

                    </FrameLayout>



                    <FrameLayout
                        android:id="@+id/frame_no2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="2.5dp"
                        android:paddingBottom="2.5dp"
                        android:layout_alignTop="@+id/frame_yes2"
                        android:layout_alignBottom="@+id/frame_yes2"

                        android:layout_toEndOf="@+id/frame_yes2"
                        >

                        <TextView
                            android:id="@+id/no_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Off"
                            android:layout_gravity="center_vertical"
                            android:padding="5dp"
                            android:textAllCaps="true"
                            android:textColor="#ffffff"
                            android:layout_toEndOf="@+id/frame_no2"

                            />

                    </FrameLayout>



                    <android.support.v7.widget.CardView
                        android:id="@+id/third_card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/frame_yes2"
                        android:layout_alignBottom="@+id/frame_yes2"
                        android:layout_alignStart="@+id/frame_yes2"
                        android:layout_alignEnd="@+id/frame_yes2"
                        app:cardBackgroundColor="#ec7f5a"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"

                        >






                    </android.support.v7.widget.CardView>






                </RelativeLayout>







            </android.support.v7.widget.CardView>




        </LinearLayout>





    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_margin="15dp"


        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:id="@+id/view"

        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="2"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Used (MB)"
                android:textColor="#ffffff"

                />


            <com.github.mikephil.charting.charts.PieChart

                android:id="@+id/pie_chart1"
                android:layout_width="150dp"
                android:layout_height="150dp">



            </com.github.mikephil.charting.charts.PieChart>







        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="3"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Used 890MB"
                android:textColor="#ffffff"

                />


            <com.github.mikephil.charting.charts.PieChart

                android:id="@+id/pie_chart2"
                android:layout_width="150dp"
                android:layout_height="150dp">



            </com.github.mikephil.charting.charts.PieChart>







        </LinearLayout>




    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master Volume"
        android:textColor="@color/white"
        android:textSize="20dp"

        />



    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >





    </com.github.mikephil.charting.charts.PieChart>












</LinearLayout>
